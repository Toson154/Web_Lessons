    <script>
        $(document).ready(function () {
            // Load unread messages count for teacher
            function loadTeacherUnreadMessages() {
                $.get('/Teacher/GetUnreadMessagesCount')
                    .then(response => {
                        if (response.success && response.count > 0) {
                            $('#teacherUnreadMessagesCount').text(response.count).show();
                        } else {
                            $('#teacherUnreadMessagesCount').hide();
                        }
                    })
                    .catch(err => console.error('Error loading unread messages:', err));
            }

            // Load every 30 seconds
            loadTeacherUnreadMessages();
            setInterval(loadTeacherUnreadMessages, 30000);
        });
    </script>    <!-- Teacher Custom Scripts -->
    <script>
        // Auto-dismiss alerts after 5 seconds
        $(document).ready(function () {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);

            // Initialize Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Handle active navigation
            $('.nav-link').each(function () {
                if ($(this).hasClass('active')) {
                    $(this).append('<span class="badge bg-light text-dark ms-2">Current</span>');
                }
            });

            // Confirmation for delete actions with class .btn-delete
            $('.btn-delete').on('click', function (e) {
                if (!confirm('Are you sure you want to delete this item?')) {
                    e.preventDefault();
                }
            });

            // Toast notification function
            window.showToast = function (message, type = 'info', duration = 5000) {
                const icon = {
                    'success': 'check-circle',
                    'danger': 'exclamation-circle',
                    'warning': 'exclamation-triangle',
                    'info': 'info-circle'
                }[type] || 'info-circle';

                const toast = $(`
                            <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                                <div class="d-flex">
                                    <div class="toast-body">
                                        <i class="fas fa-${icon} me-2"></i>
                                        ${message}
                                    </div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                                </div>
                            </div>
                        `);

                // Create toast container if doesn't exist
                if ($('.toast-container').length === 0) {
                    $('body').append('<div class="toast-container position-fixed bottom-0 end-0 p-3"></div>');
                }

                $('.toast-container').append(toast);
                const bsToast = new bootstrap.Toast(toast[0], {
                    autohide: true,
                    delay: duration
                });
                bsToast.show();

                // Remove after hide
                toast.on('hidden.bs.toast', function () {
                    $(this).remove();
                });
            };
        });

        // Handle file upload preview
        function previewImage(input, previewId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#' + previewId).attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Video upload progress (simplified version)
        function uploadVideo(fileInput, progressBarId, urlInputId) {
            const file = fileInput.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append('file', file);

            $.ajax({
                url: '/Upload/UploadVideo',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                xhr: function () {
                    const xhr = new XMLHttpRequest();
                    xhr.upload.addEventListener('progress', function (e) {
                        if (e.lengthComputable) {
                            const percent = Math.round((e.loaded / e.total) * 100);
                            $('#' + progressBarId).css('width', percent + '%');
                            $('#' + progressBarId).text(percent + '%');
                        }
                    });
                    return xhr;
                },
                success: function (response) {
                    $('#' + urlInputId).val(response.path);
                    alert('Video uploaded successfully!');
                },
                error: function () {
                    alert('Error uploading video. Please try again.');
                }
            });
        }
    </script>

