@model Web_Lessons.ViewModels.CommentPartialViewModel

<div class="comment-item mb-3" data-comment-id="@Model.Comment.Id">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <!-- Comment Header -->
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(Model.Comment.UserProfileImage))
                    {
                        <img src="@Model.Comment.UserProfileImage"
                             alt="@Model.Comment.UserName"
                             class="rounded-circle me-2"
                             style="width: 40px; height: 40px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2"
                             style="width: 40px; height: 40px; font-size: 1rem;">
                            @Model.Comment.UserName?[0]
                        </div>
                    }
                    <div>
                        <h6 class="mb-0">@Model.Comment.UserName</h6>
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            @Model.Comment.TimeAgo
                            @if (Model.Comment.IsEdited)
                            {
                                <span class="ms-2">
                                    <i class="fas fa-edit me-1"></i>edited
                                </span>
                            }
                        </small>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary border-0 dropdown-toggle"
                            type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @if (Model.Comment.CanEdit)
                        {
                            <li>
                                <button class="dropdown-item edit-comment-btn"
                                        data-comment-id="@Model.Comment.Id">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </button>
                            </li>
                        }
                        @if (Model.Comment.CanDelete)
                        {
                            <li>
                                <button class="dropdown-item delete-comment-btn"
                                        data-comment-id="@Model.Comment.Id">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </button>
                            </li>
                        }
                        <li>
                            <button class="dropdown-item report-comment-btn"
                                    data-comment-id="@Model.Comment.Id">
                                <i class="fas fa-flag me-2"></i>Report
                            </button>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Comment Content -->
            <div class="comment-content mb-2">
                @Html.Raw(Model.Comment.Content)
            </div>

            <!-- Comment Actions -->
            <div class="d-flex justify-content-between align-items-center">
                <div class="comment-reactions">
                    <div class="d-flex align-items-center">
                        <!-- Reaction buttons -->
                        @{
                            var reactions = new[]
                            {
                        new { Type = "like", Icon = "👍", Text = "Like" },
                        new { Type = "love", Icon = "❤️", Text = "Love" },
                        new { Type = "haha", Icon = "😄", Text = "Haha" },
                        new { Type = "wow", Icon = "😲", Text = "Wow" },
                        new { Type = "sad", Icon = "😢", Text = "Sad" },
                        new { Type = "angry", Icon = "😠", Text = "Angry" }
                                        };
                        }

                        @foreach (var reaction in reactions)
                        {
                            <button class="btn btn-sm reaction-btn me-1 @(Model.Comment.CurrentUserReaction == reaction.Type ? "active" : "")"
                                    data-comment-id="@Model.Comment.Id"
                                    data-reaction="@reaction.Type"
                                    title="@reaction.Text">
                                @reaction.Icon
                                @if (Model.Comment.Reactions.ContainsKey(reaction.Type))
                                {
                                    <span class="ms-1">@Model.Comment.Reactions[reaction.Type]</span>
                                }
                            </button>
                        }
                    </div>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-sm btn-outline-secondary reply-toggle-btn"
                            data-comment-id="@Model.Comment.Id">
                        <i class="fas fa-reply me-1"></i>Reply
                    </button>

                    @if (Model.Comment.RepliesCount > 0)
                    {
                        <button class="btn btn-sm btn-outline-secondary view-replies-btn"
                                data-comment-id="@Model.Comment.Id">
                            <i class="fas fa-comments me-1"></i>
                            @Model.Comment.RepliesCount replies
                        </button>
                    }
                </div>
            </div>

            <!-- Reply Form (Hidden by default) -->
            <div class="reply-form mt-3" id="replyForm-@Model.Comment.Id" style="display: none;">
                <form class="add-reply-form" data-comment-id="@Model.Comment.Id">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ParentCommentId" value="@Model.Comment.Id" />
                    <input type="hidden" name="LessonId" value="@Model.Comment.LessonId" />

                    <div class="mb-2">
                        <textarea name="Content" class="form-control" rows="2"
                                  placeholder="Write a reply..." required></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary cancel-reply-btn"
                                data-comment-id="@Model.Comment.Id">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fas fa-paper-plane me-1"></i>Post Reply
                        </button>
                    </div>
                </form>
            </div>

            <!-- Replies Container -->
            <div class="replies-container mt-3" id="replies-@Model.Comment.Id" style="display: none;">
                @if (Model.Comment.Replies != null && Model.Comment.Replies.Any())
                {
                    foreach (var reply in Model.Comment.Replies)
                    {
                        <div class="reply-item ms-4 ps-3 border-start">
                            <!-- Reply content similar to comment -->
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<style>
    .comment-item .reaction-btn {
        background: transparent;
        border: 1px solid #dee2e6;
        border-radius: 20px;
        padding: 2px 10px;
        transition: all 0.3s;
    }

        .comment-item .reaction-btn:hover {
            background: #f8f9fa;
            transform: translateY(-2px);
        }

        .comment-item .reaction-btn.active {
            background: #e3f2fd;
            border-color: #3498db;
            color: #3498db;
        }

    .reply-item {
        border-left: 3px solid #dee2e6;
        padding-left: 15px;
        margin-left: 40px;
    }
</style>