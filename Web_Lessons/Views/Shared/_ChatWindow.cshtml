@model Web_Lessons.ViewModels.ChatDetailViewModel

<div class="chat-window">
    <!-- Chat Header -->
    <div class="chat-header mb-3">
        <div class="d-flex align-items-center">
            <button class="btn btn-sm btn-outline-secondary me-2 back-to-list-btn">
                <i class="fas fa-arrow-left"></i>
            </button>
            <div class="position-relative me-3">
                <img src="@Model.Chat.OtherUserProfileImage"
                     alt="@Model.Chat.OtherUserName"
                     class="rounded-circle"
                     style="width: 45px; height: 45px; object-fit: cover;">
                @if (Model.Chat.IsOnline)
                {
                    <span class="position-absolute bottom-0 end-0 badge bg-success border border-white rounded-circle"
                          style="width: 12px; height: 12px;"></span>
                }
            </div>
            <div>
                <h6 class="mb-0">@Model.Chat.OtherUserName</h6>
                <small class="text-muted">
                    @if (Model.Chat.IsOnline)
                    {
                        <span class="text-success">● Online</span>
                    }
                    else
                    {
                        <span>Offline</span>
                    }
                    @if (Model.Chat.IsTeacher)
                    {
                        <span class="ms-2">
                            <i class="fas fa-chalkboard-teacher"></i> Teacher
                        </span>
                    }
                </small>
            </div>
        </div>
    </div>

    <!-- Messages Container -->
    <div class="messages-container" id="messagesContainer">
        @if (!Model.Messages.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                <p class="text-muted">No messages yet</p>
                <p class="text-muted small">Start the conversation!</p>
            </div>
        }
        else
        {
            foreach (var message in Model.Messages)
            {
                <div class="message @(message.IsOwnMessage ? "sent" : "received")">
                    <div class="message-content">
                        @if (!string.IsNullOrEmpty(message.AttachmentUrl))
                        {
                            <div class="message-attachment mb-2">
                                @if (message.AttachmentType == "image")
                                {
                                    <img src="@message.AttachmentUrl"
                                         alt="Attachment"
                                         class="img-fluid rounded"
                                         style="max-height: 200px; cursor: pointer;"
                                         onclick="openImageModal('@message.AttachmentUrl')">
                                }
                                else if (message.AttachmentType == "pdf")
                                {
                                    <a href="@message.AttachmentUrl" target="_blank"
                                       class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-file-pdf me-1"></i>View PDF
                                    </a>
                                }
                                else
                                {
                                    <a href="@message.AttachmentUrl" target="_blank"
                                       class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-file me-1"></i>Download File
                                    </a>
                                }
                            </div>
                        }

                        <div class="message-text">@message.Content</div>
                        <div class="message-time">
                            @message.TimeAgo
                            @if (message.IsOwnMessage)
                            {
                                <i class="fas fa-check@(message.IsRead ? "-double" : "") ms-1"
                                   title="@(message.IsRead ? "Read" : "Sent")"></i>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Message Input -->
    <div class="message-input-container">
        <form class="send-message-form" data-chat-id="@Model.Chat.Id">
            @Html.AntiForgeryToken()
            <div class="input-group">
                <textarea class="form-control message-input"
                          placeholder="Type your message..."
                          rows="1"
                          id="messageInput"
                          style="resize: none;"></textarea>

                <div class="input-group-append">
                    <button class="btn btn-primary ms-2" type="submit" id="sendMessageBtn">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>

            <div class="mt-2" id="typingIndicator" style="display: none;">
                <div class="typing-indicator">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        const chatId = @Model.Chat.Id;
        const otherUserId = '@Model.Chat.OtherUserId';

        // Auto-scroll to bottom
        scrollToBottom();

        // Back to list button
        $('.back-to-list-btn').click(function () {
            loadChatListOptimized();
        });

        // Message input auto-resize
        $('#messageInput').on('input', function () {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });

        // Send message
        $('.send-message-form').submit(function (e) {
            e.preventDefault();
            sendMessage();
        });

        // Enter key to send (Shift+Enter for new line)
        $('#messageInput').keydown(function (e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        function scrollToBottom() {
            const container = $('#messagesContainer');
            container.scrollTop(container[0].scrollHeight);
        }

        function sendMessage() {
            const message = $('#messageInput').val().trim();
            if (!message) return;

            // Add message to UI immediately (optimistic update)
            addMessageToUI(message, true);

            // Clear input
            $('#messageInput').val('');
            $('#messageInput').css('height', 'auto');

            // Send to server
            $.ajax({
                url: '/Chat/SendMessage',
                type: 'POST',
                data: {
                    ChatId: chatId,
                    Content: message,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (!response.success) {
                        // Show error if message failed to send
                        showToast('Failed to send message', 'danger');
                    }
                },
                error: function () {
                    showToast('Error sending message', 'danger');
                }
            });
        }

        function addMessageToUI(content, isSent = true) {
            const container = $('#messagesContainer');
            const messageId = 'temp_' + Date.now();
            const timeAgo = 'just now';

            const messageHtml = `
                    <div class="message ${isSent ? 'sent' : 'received'}" id="${messageId}">
                        <div class="message-content">
                            <div class="message-text">${content}</div>
                            <div class="message-time">
                                ${timeAgo}
                                ${isSent ? '<i class="fas fa-check ms-1" title="Sending..."></i>' : ''}
                            </div>
                        </div>
                    </div>
                `;

            container.append(messageHtml);
            scrollToBottom();

            // Add animation
            $('#' + messageId).addClass('animate__animated animate__fadeInUp');
        }
    });

    function openImageModal(imageUrl) {
        const modalHtml = `
                <div class="modal" id="imageModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Image Preview</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body text-center">
                                <img src="${imageUrl}" alt="Preview" class="img-fluid">
                            </div>
                            <div class="modal-footer">
                                <a href="${imageUrl}" download class="btn btn-primary">
                                    <i class="fas fa-download me-1"></i>Download
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            `;

        $('body').append(modalHtml);
        const modal = new bootstrap.Modal(document.getElementById('imageModal'));
        modal.show();

        $('#imageModal').on('hidden.bs.modal', function () {
            $(this).remove();
        });
    }
</script>

<style>
    .chat-window {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .messages-container {
        flex-grow: 1;
        overflow-y: auto;
        padding: 15px;
        background: #f8f9fa;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .message-attachment img {
        max-width: 100%;
        cursor: pointer;
        transition: transform 0.3s;
    }

        .message-attachment img:hover {
            transform: scale(1.02);
        }

    .back-to-list-btn {
        display: none;
    }

    @@media (max-width: 768px) {
        .back-to-list-btn {
            display: inline-block;
        }
    }
</style>