    <!-- SignalR Scripts -->
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script>
        // Global chat connection
        var chatConnection = null;

        function initializeChatConnection() {
            if (chatConnection && chatConnection.state === signalR.HubConnectionState.Connected) {
                return;
            }

            chatConnection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .configureLogging(signalR.LogLevel.Information)
                .build();

            chatConnection.on("ReceiveMessage", function (message) {
                // Handle message globally
                if (typeof window.onChatMessageReceived === 'function') {
                    window.onChatMessageReceived(message);
                }
            });

            chatConnection.on("UserOnline", function (userId) {
                if (typeof window.onUserOnline === 'function') {
                    window.onUserOnline(userId);
                }
            });

            chatConnection.on("UserOffline", function (userId) {
                if (typeof window.onUserOffline === 'function') {
                    window.onUserOffline(userId);
                }
            });

            chatConnection.start()
                .then(function () {
                    console.log('Global chat connection established');
                })
                .catch(function (err) {
                    console.error('Error establishing connection:', err);
                    setTimeout(initializeChatConnection, 5000);
                });
        }

        // Initialize connection when page loads
        $(document).ready(function () {
            initializeChatConnection();
        });
    </script>
    @RenderSection("Scripts", required: false)
