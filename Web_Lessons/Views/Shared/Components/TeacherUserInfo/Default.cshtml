@model Web_Lessons.Components.TeacherUserInfoViewModel

@if (Model != null)
{
    <div class="user-avatar">
        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl) && Model.ProfileImageUrl != "/images/avatar.png")
        {
            <img src="@Model.ProfileImageUrl"
                 alt="@Model.FullName"
                 style="width: 70px; height: 70px; border-radius: 50%; object-fit: cover; border: 3px solid rgba(255,255,255,0.2);">
        }
        else
        {
            <div style="width: 70px; height: 70px; background: #3498db; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 24px; margin: 0 auto 1rem; border: 3px solid rgba(255,255,255,0.2);">
                @Model.UserInitial
            </div>
        }
    </div>
    <h6 class="mb-1 text-center" style="color: white;">@Model.FirstName</h6>
}