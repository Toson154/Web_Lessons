@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    var currentUser = await UserManager.GetUserAsync(User);
    var canStartNewChat = currentUser?.IsTeacher == false;
}

<div class="chat-widget">
    <!-- Chat toggle button -->
    <button class="btn btn-primary chat-toggle-btn" id="chatToggleBtn">
        <i class="fas fa-comments me-2"></i>
        <span class="d-none d-md-inline">Chat</span>
        <span class="badge bg-danger ms-2" id="unreadChatBadge" style="display: none;">0</span>
    </button>

    <!-- Chat container -->
    <div class="chat-container" id="chatContainer" style="display: none;">
        <div class="chat-header">
            <div class="d-flex justify-content-between align-items-center w-100">
                <h6 class="mb-0">Chat</h6>
                <div>
                    @if (canStartNewChat)
                    {
                        <button class="btn btn-sm btn-outline-light me-2" id="newChatBtn" title="New Chat">
                            <i class="fas fa-plus"></i>
                        </button>
                    }
                    <button class="btn btn-sm btn-outline-light close-chat-btn">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="chat-body" id="chatBody">
            <!-- Loading spinner -->
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Chat Widget Styles */
    .chat-widget {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1050;
    }

    .chat-toggle-btn {
        border-radius: 25px;
        padding: 12px 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
    }

        .chat-toggle-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.25);
        }

    .chat-container {
        position: absolute;
        bottom: 70px;
        right: 0;
        width: 350px;
        max-width: 90vw;
        height: 500px;
        max-height: 80vh;
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.2);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        animation: slideUp 0.3s ease;
    }

    .chat-header {
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: white;
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-shrink: 0;
    }

    .chat-body {
        flex-grow: 1;
        overflow-y: auto;
        padding: 0;
        background: #f8f9fa;
    }

    /* Chat List Styles */
    .chat-list {
        padding: 0;
    }

    .chat-item {
        cursor: pointer;
        transition: background-color 0.2s;
        background: white;
        border-bottom: 1px solid #eee;
        padding: 12px 15px;
    }

        .chat-item:hover {
            background-color: #f5f7fa;
        }

        .chat-item.active {
            background-color: #e8f4ff;
            border-left: 3px solid #3498db;
        }

    .chat-user-avatar {
        width: 45px;
        height: 45px;
        object-fit: cover;
        border-radius: 50%;
    }

    .online-indicator {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 12px;
        height: 12px;
        background: #2ecc71;
        border: 2px solid white;
        border-radius: 50%;
    }

    .chat-last-message {
        font-size: 0.85rem;
        color: #666;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .chat-time {
        font-size: 0.75rem;
        color: #999;
    }

    .unread-badge {
        font-size: 0.75rem;
        padding: 2px 6px;
        min-width: 20px;
        text-align: center;
    }

    /* Message Styles */
    .message-container {
        padding: 15px;
        min-height: 300px;
        display: flex;
        flex-direction: column;
    }

    .message {
        margin-bottom: 10px;
        max-width: 80%;
    }

        .message.sent {
            margin-left: auto;
            background: #4361ee;
            color: white;
            border-radius: 18px 18px 4px 18px;
            padding: 10px 15px;
        }

        .message.received {
            background: #e9ecef;
            color: #333;
            border-radius: 18px 18px 18px 4px;
            padding: 10px 15px;
        }

    .message-time {
        font-size: 0.7rem;
        opacity: 0.7;
        margin-top: 3px;
    }

    .message-input-container {
        padding: 15px;
        border-top: 1px solid #dee2e6;
        background: white;
        flex-shrink: 0;
    }

    .message-input {
        border-radius: 20px;
        border: 1px solid #dee2e6;
        padding: 10px 15px;
        resize: none;
    }

        .message-input:focus {
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
            border-color: #4361ee;
        }

    /* Empty State */
    .empty-state {
        padding: 40px 20px;
        text-align: center;
    }

        .empty-state i {
            font-size: 3rem;
            color: #ddd;
            margin-bottom: 15px;
        }

        .empty-state p {
            color: #999;
            font-size: 0.9rem;
        }

    /* Animations */
    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .chat-widget {
            bottom: 15px;
            right: 15px;
        }

        .chat-container {
            width: 320px;
            height: 450px;
            right: -10px;
        }

        .chat-toggle-btn {
            padding: 10px 15px;
            font-size: 0.9rem;
        }

            .chat-toggle-btn span:not(.badge) {
                display: none;
            }
    }

    @@media (max-width: 480px) {
        .chat-container {
            width: 280px;
            height: 400px;
            right: -20px;
        }

        .chat-item {
            padding: 10px 12px;
        }

        .chat-user-avatar {
            width: 40px;
            height: 40px;
        }
    }
</style>

<script>
    $(document).ready(function () {
        // Initialize chat widget
        initializeChatWidget();

        // Load unread message count
        loadUnreadChatCount();

        // Refresh unread count every 30 seconds
        setInterval(loadUnreadChatCount, 30000);

        // Cache for chat data
        let chatCache = {
            data: null,
            timestamp: null,
            expiry: 30000 // 30 seconds
        };

        function initializeChatWidget() {
            const toggleBtn = $('#chatToggleBtn');
            const chatContainer = $('#chatContainer');
            const closeBtn = $('.close-chat-btn');
            const newChatBtn = $('#newChatBtn');

            // Toggle chat container
            toggleBtn.click(function (e) {
                e.stopPropagation();
                chatContainer.toggle();
                if (chatContainer.is(':visible')) {
                    loadChatList();
                }
            });

            // Close chat button
            closeBtn.click(function (e) {
                e.stopPropagation();
                chatContainer.hide();
            });

            // New chat button
            newChatBtn.click(function (e) {
                e.stopPropagation();
                showNewChatModal();
            });

            // Close chat when clicking outside
            $(document).click(function (event) {
                if (!$(event.target).closest('.chat-widget').length) {
                    chatContainer.hide();
                }
            });

            // Prevent closing when clicking inside
            chatContainer.click(function (e) {
                e.stopPropagation();
            });
        }

        function loadUnreadChatCount() {
            $.ajax({
                url: '/Student/GetUnreadMessagesCount',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        updateUnreadBadge(response.count);
                    }
                },
                error: function () {
                    console.warn('Error loading unread chat count');
                }
            });
        }

        function updateUnreadBadge(count) {
            const badge = $('#unreadChatBadge');
            if (count > 0) {
                badge.text(count > 99 ? '99+' : count).show();
            } else {
                badge.hide();
            }
        }

        function loadChatList() {
            const container = $('#chatBody');

            // Show loading state
            container.html(`
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted mt-2 small">Loading chats...</p>
                    </div>
                `);

            // Try cache first
            if (chatCache.data && chatCache.timestamp &&
                (Date.now() - chatCache.timestamp) < chatCache.expiry) {
                renderChatList(chatCache.data);
                return;
            }

            $.ajax({
                url: '/Student/GetChats',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        chatCache.data = response;
                        chatCache.timestamp = Date.now();
                        renderChatList(response);
                    } else {
                        showErrorMessage('Failed to load chats');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error loading chats:', error);
                    showErrorMessage('Unable to load chats. Please try again.');

                    // Show cached data if available
                    if (chatCache.data) {
                        renderChatList(chatCache.data);
                    }
                }
            });
        }

        function renderChatList(data) {
            const container = $('#chatBody');
            const chats = data.chats || [];

            if (chats.length === 0) {
                let html = '<div class="empty-state">';
                html += '<i class="fas fa-comments fa-3x mb-3"></i>';
                html += '<p class="text-muted mb-3">No active chats</p>';

    @if (canStartNewChat)
    {
        @:html += '<button class="btn btn-primary btn-sm" id="startFirstChatBtn">';
        @:html += '<i class="fas fa-plus me-1"></i>Start Your First Chat';
        @:html += '</button>';
    }
    else
    {
        @:html += '<a href="/Chat" class="btn btn-primary btn-sm">';
        @:html += '<i class="fas fa-comments me-1"></i>Go to Chat';
        @:html += '</a>';
    }

                    html += '</div>';
                container.html(html);

                $('#startFirstChatBtn').click(showNewChatModal);

                return;
            }

            let html = '<div class="chat-list">';

            chats.forEach(chat => {
                const lastMessage = chat.lastMessage || 'No messages yet';
                const timeAgo = formatTimeAgo(chat.lastMessageAt);

                html += `
                        <div class="chat-item" data-chat-id="${chat.id}">
                            <div class="d-flex align-items-center">
                                <div class="position-relative me-3">
                                    <img src="${chat.otherUserProfileImage || '/images/avatar.png'}"
                                         alt="${chat.otherUserName}"
                                         class="chat-user-avatar">
                                    ${chat.isOnline ? '<div class="online-indicator"></div>' : ''}
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <h6 class="mb-0 fw-bold">${chat.otherUserName}</h6>
                                        <small class="chat-time">${timeAgo}</small>
                                    </div>
                                    <p class="chat-last-message mb-0">${lastMessage}</p>
                                </div>
                                ${chat.unreadCount > 0 ?
                        `<span class="badge bg-danger unread-badge ms-2">${chat.unreadCount}</span>` :
                        ''}
                            </div>
                        </div>
                    `;
            });

            html += '</div>';

    @if (canStartNewChat)
    {
        @:html += `
        @:    <div class="border-top">
        @:        <button class="btn btn-outline-primary w-100 rounded-0 py-3" id="addNewChatBtn">
        @:            <i class="fas fa-plus me-2"></i>Start New Chat
        @:        </button>
        @:    </div>
        @:`;
    }

                container.html(html);

            // Add click handlers
            $('.chat-item').click(function () {
                const chatId = $(this).data('chat-id');
                loadChatWindow(chatId);
            });

    @if (canStartNewChat)
    {
        @:$('#addNewChatBtn').click(showNewChatModal);
    }
            }

        function showNewChatModal() {
            $.ajax({
                url: '/Student/GetAvailableTeachers',
                type: 'GET',
                success: function (response) {
                    if (response.success && response.teachers.length > 0) {
                        let html = `
                                <div class="modal" id="newChatModal" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Start New Chat</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label class="form-label">Select Teacher</label>
                                                    <div class="list-group" style="max-height: 300px; overflow-y: auto;">
                            `;

                        response.teachers.forEach(teacher => {
                            html += `
                                    <div class="list-group-item list-group-item-action teacher-list-item"
                                         data-teacher-id="${teacher.id}">
                                        <div class="d-flex align-items-center">
                                            <img src="${teacher.profileImageUrl || '/images/avatar.png'}"
                                                 alt="${teacher.name}"
                                                 class="rounded-circle me-3"
                                                 style="width: 40px; height: 40px;">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-0">${teacher.name}</h6>
                                                <small class="text-muted">${teacher.email}</small>
                                            </div>
                                            <small class="text-muted">
                                                <i class="fas fa-users me-1"></i>${teacher.studentCount || 0}
                                            </small>
                                        </div>
                                    </div>
                                `;
                        });

                        html += `
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Initial Message (Optional)</label>
                                                    <textarea class="form-control" id="initialMessage"
                                                              rows="3" placeholder="Type your first message..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-primary" id="confirmStartChat">Start Chat</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;

                        $('body').append(html);
                        const modal = new bootstrap.Modal(document.getElementById('newChatModal'));
                        modal.show();

                        let selectedTeacherId = null;

                        $('.teacher-list-item').click(function () {
                            $('.teacher-list-item').removeClass('active');
                            $(this).addClass('active');
                            selectedTeacherId = $(this).data('teacher-id');
                        });

                        $('#confirmStartChat').click(function () {
                            if (!selectedTeacherId) {
                                showToast('Please select a teacher', 'warning');
                                return;
                            }

                            const initialMessage = $('#initialMessage').val();

                            $.ajax({
                                url: '/Student/StartNewChat',
                                type: 'POST',
                                data: {
                                    teacherId: selectedTeacherId,
                                    initialMessage: initialMessage,
                                    __RequestVerificationToken: getAntiForgeryToken()
                                },
                                success: function (response) {
                                    if (response.success) {
                                        modal.hide();
                                        $('#newChatModal').remove();

                                        if (response.isNew) {
                                            showToast('Chat started successfully!', 'success');
                                            // Load the new chat
                                            loadChatWindow(response.chatId);
                                        } else {
                                            showToast('Chat already exists', 'info');
                                            // Load existing chat
                                            loadChatWindow(response.chatId);
                                        }
                                    } else {
                                        showToast(response.message || 'Error starting chat', 'danger');
                                    }
                                },
                                error: function () {
                                    showToast('Error starting chat', 'danger');
                                }
                            });
                        });

                        // Remove modal when closed
                        $('#newChatModal').on('hidden.bs.modal', function () {
                            $(this).remove();
                        });
                    } else {
                        showToast('No teachers available', 'warning');
                    }
                },
                error: function () {
                    showToast('Error loading teachers', 'danger');
                }
            });
        }

        function loadChatWindow(chatId) {
            const container = $('#chatBody');

            // Show loading state
            container.html(`
                    <div class="message-container">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2 small">Loading chat...</p>
                        </div>
                    </div>
                `);

            // Mark messages as read
            markMessagesAsRead(chatId);

            // Load chat messages
            $.ajax({
                url: '/Chat/Details/' + chatId,
                type: 'GET',
                success: function (data) {
                    container.html(data);
                    initializeChatWindow(chatId);
                },
                error: function () {
                    showErrorMessage('Error loading chat');
                }
            });
        }

        function initializeChatWindow(chatId) {
            // Add back button
            const backButton = `<button class="btn btn-sm btn-outline-secondary mb-3 back-to-chat-list">
                                        <i class="fas fa-arrow-left me-1"></i>Back to Chats
                                    </button>`;

            $('#chatBody').prepend(backButton);

            // Back to list button handler
            $('.back-to-chat-list').click(function () {
                loadChatList();
            });

            // Send message handler
            $('#sendMessageBtn').click(function () {
                sendMessage(chatId);
            });

            // Enter key handler
            $('#messageInput').keypress(function (e) {
                if (e.which === 13 && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage(chatId);
                }
            });

            // Auto-resize textarea
            $('#messageInput').on('input', function () {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        }

        function sendMessage(chatId) {
            const messageInput = $('#messageInput');
            const message = messageInput.val().trim();

            if (!message) return;

            // Add message to UI immediately (optimistic update)
            addMessageToUI(message, true);

            // Clear input
            messageInput.val('');
            messageInput.css('height', 'auto');

            // Send to server
            $.ajax({
                url: '/Chat/SendMessage',
                type: 'POST',
                data: {
                    ChatId: chatId,
                    Content: message,
                    __RequestVerificationToken: getAntiForgeryToken()
                },
                success: function (response) {
                    if (!response.success) {
                        showToast('Failed to send message', 'danger');
                    }
                },
                error: function () {
                    showToast('Error sending message', 'danger');
                }
            });
        }

        function addMessageToUI(content, isSent = true) {
            const container = $('.messages-container');
            if (container.length === 0) return;

            const messageId = 'temp_' + Date.now();
            const timeAgo = 'just now';

            const messageHtml = `
                    <div class="message ${isSent ? 'sent' : 'received'}" id="${messageId}">
                        <div class="message-content">
                            <div class="message-text">${content}</div>
                            <div class="message-time">
                                ${timeAgo}
                                ${isSent ? '<i class="fas fa-check ms-1" title="Sending..."></i>' : ''}
                            </div>
                        </div>
                    </div>
                `;

            container.append(messageHtml);
            container.scrollTop(container[0].scrollHeight);
        }

        function markMessagesAsRead(chatId) {
            $.ajax({
                url: '/Student/MarkMessagesAsRead',
                type: 'POST',
                data: {
                    chatId: chatId,
                    __RequestVerificationToken: getAntiForgeryToken()
                },
                success: function (response) {
                    if (response.success) {
                        updateUnreadBadge(0);
                    }
                }
            });
        }

        function formatTimeAgo(dateString) {
            if (!dateString) return '';

            const date = new Date(dateString);
            const now = new Date();
            const diffMs = now - date;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMins / 60);
            const diffDays = Math.floor(diffHours / 24);

            if (diffMins < 1) return 'just now';
            if (diffMins < 60) return `${diffMins}m`;
            if (diffHours < 24) return `${diffHours}h`;
            if (diffDays < 7) return `${diffDays}d`;

            return date.toLocaleDateString('en-US', {
                month: 'short',
                day: 'numeric'
            });
        }

        function showErrorMessage(message) {
            const container = $('#chatBody');
            container.html(`
                    <div class="empty-state">
                        <i class="fas fa-exclamation-triangle text-warning fa-3x mb-3"></i>
                        <p class="text-muted mb-3">${message}</p>
                        <button class="btn btn-sm btn-outline-primary" onclick="loadChatList()">
                            <i class="fas fa-redo me-1"></i>Try Again
                        </button>
                    </div>
                `);
        }

        function showToast(message, type = 'info') {
            // Check if toast container exists
            let container = $('.toast-container');
            if (container.length === 0) {
                container = $('<div class="toast-container position-fixed bottom-0 end-0 p-3"></div>');
                $('body').append(container);
            }

            const icon = type === 'success' ? 'check-circle' :
                type === 'danger' ? 'exclamation-circle' : 'info-circle';

            const toast = $(`
                    <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                        <div class="d-flex">
                            <div class="toast-body">
                                <i class="fas fa-${icon} me-2"></i>${message}
                            </div>
                            <button class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                        </div>
                    </div>
                `);

            container.append(toast);
            const bsToast = new bootstrap.Toast(toast[0], {
                autohide: true,
                delay: 3000
            });
            bsToast.show();

            toast.on('hidden.bs.toast', function () {
                $(this).remove();
            });
        }

        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }
    });
</script>