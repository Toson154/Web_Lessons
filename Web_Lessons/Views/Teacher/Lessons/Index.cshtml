@model IEnumerable<Web_Lessons.Models.Lesson>
@{
    Layout = "_TeacherLayout";
    ViewData["Title"] = "My Lessons";
    ViewData["Description"] = "Manage your teaching lessons";

    var courseId = ViewBag.CourseId as int?;
    var courseName = ViewBag.CourseName as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4>My Lessons (@Model.Count())</h4>
        @if (!string.IsNullOrEmpty(courseName))
        {
            <p class="text-muted mb-0">Filtered by: <strong>@courseName</strong></p>
        }
    </div>
    <div>
        @if (courseId.HasValue)
        {
            <a asp-action="CreateLesson" asp-route-courseId="@courseId" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Lesson to This Course
            </a>
        }
        else
        {
            <a asp-action="CreateLesson" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Lesson
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        No lessons found.
        @if (courseId.HasValue)
        {
            <a asp-action="CreateLesson" asp-route-courseId="@courseId" class="alert-link">Create your first lesson for this course</a>
        }
        else
        {
            <a asp-action="CreateLesson" class="alert-link">Create your first lesson</a>
        }
    </div>
}
else
{
    <div class="row">
        @foreach (var lesson in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="content-card h-100">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="mb-0">@lesson.Title</h5>
                        <small class="text-muted">@lesson.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>

                    @if (!string.IsNullOrEmpty(lesson.Description))
                    {
                        <p class="text-muted mb-3">@lesson.Description</p>
                    }

                    <div class="mb-3">
                        <small class="text-muted">Course: @lesson.Course?.Title</small>
                    </div>

                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(lesson.VideoUrl))
                        {
                            <span class="badge bg-success me-2">
                                <i class="fas fa-video me-1"></i>Video Available
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(lesson.PdfUrl))
                        {
                            <span class="badge bg-info">
                                <i class="fas fa-file-pdf me-1"></i>PDF Available
                            </span>
                        }
                    </div>

                    <div class="btn-group btn-group-sm">
                        <a asp-action="LessonDetails" asp-route-id="@lesson.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                        @if (!string.IsNullOrEmpty(lesson.VideoUrl))
                        {
                            <a href="@lesson.VideoUrl" target="_blank" class="btn btn-outline-primary">
                                <i class="fas fa-play me-1"></i>Play Video
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(lesson.PdfUrl))
                        {
                            <a href="@lesson.PdfUrl" target="_blank" class="btn btn-outline-secondary">
                                <i class="fas fa-file-download me-1"></i>Download PDF
                            </a>
                        }
                        <a asp-action="EditLesson" asp-route-id="@lesson.Id" class="btn btn-outline-warning">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <form asp-action="DeleteLesson" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@lesson.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-delete">
                                <i class="fas fa-trash me-1"></i>Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        // Delete confirmation
        $(document).ready(function () {
            $('.btn-delete').on('click', function (e) {
                if (!confirm('Are you sure you want to delete this lesson?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}