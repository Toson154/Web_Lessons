    @model IEnumerable<Web_Lessons.Models.Enrollment>
    @{
        Layout = "_TeacherLayout";
        ViewData["Title"] = "My Students";
        ViewData["Description"] = "View students enrolled in your courses";

        var courseId = ViewBag.CourseId as int?;
        var courseName = ViewBag.CourseName as string;
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4>My Students (@Model.Count())</h4>
            @if (!string.IsNullOrEmpty(courseName))
            {
                <p class="text-muted mb-0">Filtered by: <strong>@courseName</strong></p>
            }
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            No students enrolled yet. Students will appear here once they 
            
            
            in your courses.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Student</th>
                        <th>Email</th>
                        <th>Course</th>
                        <th>Subject</th>
                        <th>Enrolled On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enrollment in Model)
                    {
                        <tr>
                            <td>
                                <strong>@enrollment.Student?.FullName</strong>
                            </td>
                            <td>@enrollment.Student?.Email</td>
                            <td>@enrollment.Course?.Title</td>
                            <td>@enrollment.Course?.Subject?.Name</td>
                            <td>
                                <small>@enrollment.EnrolledAt.ToString("MMM dd, yyyy")</small>
                            </td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>View Progress
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }