    @model Web_Lessons.ViewModels.StudentProfileViewModel
    @{
        Layout = "_StudentLayout";
        ViewData["Title"] = "My Profile";
        ViewData["Description"] = "View and manage your profile";
    }

    <div class="row">
        <!-- Profile Card -->
        <div class="col-md-4 mb-4">
            <div class="content-card text-center">
                @if (!string.IsNullOrEmpty(Model.User.ProfileImageUrl))
                {
                    <img src="@Model.User.ProfileImageUrl" alt="@Model.User.FullName"
                         class="profile-image mb-3 mx-auto rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                }
                else
                {
                    <div class="user-avatar-large mb-3 mx-auto">
                        @Model.User.FullName?[0]
                    </div>
                }

                <h4>@Model.User.FullName</h4>
                <p class="text-muted mb-3">@Model.User.Email</p>
                <span class="badge bg-primary px-3 py-2">
                    <i class="fas fa-user-graduate me-2"></i>Student
                </span>

                <hr class="my-4">

                <div class="row text-center">
                    <div class="col-6">
                        <h5 class="mb-0">@Model.EnrolledCoursesCount</h5>
                        <small class="text-muted">Courses</small>
                    </div>
                    <div class="col-6">
                        <h5 class="mb-0">@Model.CompletedLessonsCount</h5>
                        <small class="text-muted">Lessons</small>
                    </div>
                </div>

                <hr class="my-4">

                <small class="text-muted d-block mb-2">
                    <i class="fas fa-calendar me-1"></i>Member since @Model.JoinDate.ToString("MMM dd, yyyy")
                </small>

                @if (Model.User.LastLogin.HasValue)
                {
                    <small class="text-muted d-block">
                        <i class="fas fa-sign-in-alt me-1"></i>Last login: @Model.User.LastLogin.Value.ToString("MMM dd, HH:mm")
                    </small>
                }
            </div>
        </div>

        <!-- Profile Information -->
        <div class="col-md-8">
            <div class="content-card">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="mb-0">Profile Information</h5>
                    <a asp-controller="Account" asp-action="Profile" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit me-1"></i>Edit Profile
                    </a>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" value="@Model.User.FullName" readonly>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email Address</label>
                        <input type="email" class="form-control" value="@Model.User.Email" readonly>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Account Type</label>
                        <input type="text" class="form-control" value="Student" readonly>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Account Status</label>
                        <input type="text" class="form-control" value="Active" readonly>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.User.Bio))
                {
                    <div class="mb-3">
                        <label class="form-label">Bio</label>
                        <div class="border rounded p-3 bg-light">
                            @Model.User.Bio
                        </div>
                    </div>
                }

                <div class="mt-4">
                    <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-primary">
                        <i class="fas fa-key me-2"></i>Change Password
                    </a>
                    <a asp-controller="Student" asp-action="Dashboard" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Learning Statistics -->
            <div class="content-card mt-4">
                <h5 class="mb-4">Learning Statistics</h5>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="text-center p-3 border rounded bg-primary bg-opacity-10">
                            <div class="display-6 text-primary">@Model.EnrolledCoursesCount</div>
                            <small class="text-muted">Enrolled Courses</small>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <div class="text-center p-3 border rounded bg-success bg-opacity-10">
                            <div class="display-6 text-success">@Model.CompletedLessonsCount</div>
                            <small class="text-muted">Completed Lessons</small>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <div class="text-center p-3 border rounded bg-warning bg-opacity-10">
                            <div class="display-6 text-warning">@Model.OverallProgress%</div>
                            <small class="text-muted">Overall Progress</small>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <a asp-controller="Student" asp-action="MyProgress" class="btn btn-outline-primary">
                        <i class="fas fa-chart-line me-1"></i>View Detailed Progress Report
                    </a>
                </div>
            </div>
        </div>
    </div>

    <style>
        .user-avatar-large {
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #4361ee, #7209b7);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            font-weight: bold;
            margin: 0 auto;
        }

        .profile-image {
            border: 5px solid #f8f9fa;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>