@model IEnumerable<Web_Lessons.ViewModels.EnrollmentViewModel>
@{
    Layout = "_TeacherLayout";
    ViewData["Title"] = "Student Enrollments";
    ViewData["Description"] = "Manage student enrollments in your courses";

    var courseId = ViewBag.CourseId as int?;
    var courseTitle = ViewBag.CourseTitle as string;
    var courses = ViewBag.Courses as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4>Student Enrollments (@Model.Count())</h4>
        @if (!string.IsNullOrEmpty(courseTitle))
        {
            <p class="text-muted mb-0">Course: <strong>@courseTitle</strong></p>
        }
    </div>
    <div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

<!-- Filters and Actions -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <!-- Course Filter -->
                    <div class="col-md-6">
                        <form method="get" asp-action="Students" class="mb-3">
                            <label class="form-label">Filter by Course:</label>
                            <div class="input-group">
                                <select name="courseId" class="form-select" onchange="this.form.submit()">
                                    <option value="">All Courses</option>
                                    @foreach (var course in courses)
                                    {
                                        <option value="@course.Value" selected="@(course.Value == (courseId?.ToString() ?? ""))">
                                            @course.Text
                                        </option>
                                    }
                                </select>
                                @if (courseId.HasValue)
                                {
                                    <a asp-action="Students" class="btn btn-outline-secondary">Clear</a>
                                }
                            </div>
                        </form>
                    </div>

                    <!-- Add Student Form -->
                    @if (courseId.HasValue)
                    {
                        <div class="col-md-6">
                            <form asp-action="AddStudentToCourse" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="courseId" value="@courseId" />
                                <label class="form-label">Add Student by Email:</label>
                                <div class="input-group">
                                    <input type="email" name="studentEmail" class="form-control"
                                           placeholder="student@example.com" required />
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Add
                                    </button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h3 class="text-primary">@Model.Count()</h3>
                        <small class="text-muted">Total Students</small>
                    </div>
                    <div class="col-6">
                        <h3 class="text-success">@Model.Average(e => e.ProgressPercentage).ToString("0")%</h3>
                        <small class="text-muted">Avg Progress</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enrollments Table -->
@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        No student enrollments found.
        @if (!courseId.HasValue)
        {
            <span>Select a course to view enrollments.</span>
        }
        else
        {
            <span>No students enrolled in this course yet.</span>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Student</th>
                    <th>Course</th>
                    <th>Enrollment Date</th>
                    <th>Progress</th>
                    <th>Last Activity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(enrollment.StudentProfileImage))
                                {
                                    <img src="@enrollment.StudentProfileImage" alt="@enrollment.StudentName"
                                         class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2"
                                         style="width: 40px; height: 40px;">
                                        @enrollment.StudentName?[0]
                                    </div>
                                }
                                <div>
                                    <strong>@enrollment.StudentName</strong>
                                    <div class="text-muted small">@enrollment.StudentEmail</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <strong>@enrollment.CourseTitle</strong>
                            <div class="text-muted small">@enrollment.SubjectName • @enrollment.CourseLevel</div>
                        </td>
                        <td>
                            <div>@enrollment.EnrolledAt.ToString("MMM dd, yyyy")</div>
                            <small class="text-muted">@enrollment.EnrolledAt.ToString("hh:mm tt")</small>
                        </td>
                        <td>
                            <div class="progress" style="height: 8px; width: 150px;">
                                <div class="progress-bar @(enrollment.ProgressPercentage >= 100 ? "bg-success" : "bg-primary")"
                                     style="width: @enrollment.ProgressPercentage%"></div>
                            </div>
                            <small>@enrollment.CompletedLessons/@enrollment.TotalLessons • @enrollment.ProgressPercentage%</small>
                        </td>
                        <td>
                            @if (enrollment.LastActivity.HasValue)
                            {
                                <div>@enrollment.LastActivity.Value.ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@enrollment.LastActivity.Value.ToString("hh:mm tt")</small>
                            }
                            else
                            {
                                <span class="text-muted">No activity yet</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="ViewStudent" asp-route-studentId="@enrollment.StudentId"
                                   class="btn btn-outline-primary" title="View Student">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="ViewStudentProgress"
                           asp-route-courseId="@enrollment.CourseId"
                           asp-route-studentId="@enrollment.StudentId"
                                   class="btn btn-outline-info" title="View Progress">
                                    <i class="fas fa-chart-line"></i>
                                </a>
                                <form asp-action="RemoveFromCourse" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="enrollmentId" value="@enrollment.EnrollmentId" />
                                    <button type="submit" class="btn btn-outline-danger"
                                            onclick="return confirm('Remove @enrollment.StudentName from @enrollment.CourseTitle?')"
                                            title="Remove from Course">
                                        <i class="fas fa-user-minus"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            console.log("Students page loaded");

            // Show toast notifications
        @if (TempData["SuccessMessage"] != null)
        {
            <text>showToast('@TempData["SuccessMessage"]', 'success'); </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>showToast('@TempData["ErrorMessage"]', 'danger'); </text>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <text>showToast('@TempData["InfoMessage"]', 'info'); </text>
        }
                });

        function showToast(message, type = 'info') {
            const icon = {
                'success': 'check-circle',
                'danger': 'exclamation-circle',
                'warning': 'exclamation-triangle',
                'info': 'info-circle'
            }[type] || 'info-circle';

            const toast = $(`
                            <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                                <div class="d-flex">
                                    <div class="toast-body">
                                        <i class="fas fa-${icon} me-2"></i>
                                        ${message}
                                    </div>
                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                                </div>
                            </div>
                        `);

            // Create toast container if doesn't exist
            if ($('.toast-container').length === 0) {
                $('body').append('<div class="toast-container position-fixed bottom-0 end-0 p-3"></div>');
            }

            $('.toast-container').append(toast);
            const bsToast = new bootstrap.Toast(toast[0]);
            bsToast.show();
        }
    </script>
}